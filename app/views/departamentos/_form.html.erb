<% if departamento.errors.any? %>
  <div class="alert alert-danger alert-dismissible" id="error_explanation">
    <ul>
      <% departamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(departamento) do |f| %>
  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= f.label :nome %>
        <%= f.text_field :nome %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>