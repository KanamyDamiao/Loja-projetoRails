<p id="notice"><%= notice %></p>

<h1><%= @departamento.nome %></h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <td>Nome</td>
      <td>Descrição</td>
      <td>Departamento</td>
      <td>Preço</td>
      <td>Quantidade</td>
      <td colspan="2">
    </tr>
  </thead>
  <tbody>
    <%= render @produtos_por_departamento %>
  </tbody>
</table>

<%= link_to 'Edit', edit_departamento_path(@departamento), class:"btn btn-default" %>
<%= link_to 'Back', departamentos_path, class:"btn btn-default" %>
